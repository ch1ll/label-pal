{
  "manifest_version": 2,
  "name": "Video Timestamp Recorder",
  "version": "1.0",
  "description": "Records timestamps for video labeling based on custom schemas",
  "permissions": ["activeTab", "downloads", "tabs", "storage", "<all_urls>"],
  "browser_action": {
    "default_icon": "label-pal-icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "label-pal-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
