{
  "manifest_version": 2,
  "name": "Timestamp Recorder",
  "version": "1.0",
  "description": "Record timestamps with custom schemas",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "label-pal-icon.png",
    "default_title": "Timestamp Recorder"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "draggable-window.html"
  ]
}